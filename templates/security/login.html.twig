{% extends 'base.html.twig' %}

{% block extrastyles %}
    <link rel="stylesheet" href="{{ asset('css/form.css') }}">
{% endblock %}

{% block title %}Connexion{% endblock %}

{% block body %}
<section>
    {% if error %}
        <div class="invalid">Identifiants incorrects</div>
    {% endif %}

    {% if app.user %}
        <div class="connected">
           <p>Vous êtes déjà connecté</p> 
           <a href="{{ path('app_logout') }}">Déconnexion</a>
        </div>
    {% else %}

        <div class="login-form-box">
            <form method="post">
                <h2>Connexion</h2>
                <div class="row">
                    <div class="inputbox">
                        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" placeholder=" " required autofocus>
                        <label for="inputEmail">Email</label>
                    </div>
                </div>
                <div class="row">
                    <div class="inputbox">
                        <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" placeholder=" " required>
                        <label for="inputPassword">Mot de passe</label>
                    </div>
                </div>

                <input type="hidden" name="_csrf_token"
                    value="{{ csrf_token('authenticate') }}"
                >

                <div class="options">
                    <div class="remember">
                        <input type="checkbox" name="_remember_me" id="cb">
                        <label for="cb">Se souvenir</label>
                    </div>
                    <a href="#">Mot de passe oublié</a>
                </div>
                

                <button class="btn btn-lg btn-primary" type="submit">
                    Se connecter
                </button>
                <div class="register">
                    <p>Pas de compte ? <a href="{{ path('app_register') }}">S'inscrire</a></p>
                </div>
            </form>
        </div>
    {% endif %}
</section>
{% endblock %}
