<!DOCTYPE html>
<html lang="fr">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}{% endblock %}</title>

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Schibsted+Grotesk:wght@400;500;700&display=swap"
        rel="stylesheet">
    <link rel="stylesheet" href="{{ asset('css/normalize.css') }}">
    <link rel="stylesheet" href="{{ asset('css/style.css') }}">
    {% block extrastyles %}{% endblock %}

    <script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>

</head>

<body>
    <div class="container">
        <header>
            <div class="header-top">
                <ion-icon name="menu-outline" class="menu-icon"></ion-icon>
                <ion-icon name="close-outline" class="close-menu-icon"></ion-icon>
                <h1><a href="{{ path('main_home') }}" class="nav-click">E-commerce</a></h1>
                {% include "inc/nav.html.twig" %}
            </div>
        </header>

        <main>
            {% block body %}{% endblock body %}
        </main>

        <footer>
            <div>&copy;e-commerce {{ "now"|date("Y") }} </div>
        </footer>
    </div>
</body>
<script>
    const menuIcon = document.querySelector(".menu-icon")
    const closeMenuIcon = document.querySelector(".close-menu-icon")
    const nav = document.querySelector("nav")
    const container = document.querySelector('.container')

    menuIcon.addEventListener('click', () => {
        nav.classList.toggle('mobile-menu')
        menuIcon.classList.toggle('mobile-menu')
        closeMenuIcon.classList.toggle('mobile-menu')
    })

    closeMenuIcon.addEventListener('click', () => {
        nav.classList.toggle('mobile-menu')
        menuIcon.classList.toggle('mobile-menu')
        closeMenuIcon.classList.toggle('mobile-menu')
    })

    container.addEventListener('click', () => {
        if(nav.classList.contains('mobile-menu') && !event.target.classList.contains('mobile-menu') && !event.target.classList.contains('nav-click')) {
            nav.classList.toggle('mobile-menu')
            menuIcon.classList.toggle('mobile-menu')
            closeMenuIcon.classList.toggle('mobile-menu')
        }
    })
</script>

</html>